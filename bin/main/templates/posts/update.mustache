{{>layout/header}}

	<div class="col-md-12">
			<div class="col-md-4">
			<h1>게시글 수정</h1>
				<form>
					<div class="form-group">
						<label for="title">글번호</label>
						<input type="text" class="form-control" id="id" placeholder="제목을 입력하세요" value="{{post.id}}" readonly="readonly"/>
					</div>
					<div class="form-group">
						<label for="title">제목</label>
						<input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{post.title}}"/>
					</div>
					<div class="form-group">
						<label for="author">작성자</label>
						<input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요" value="{{post.author}}" readonly="readonly"/>
					</div>
					<div class="form-group">
						<label for="content">내용</label>
						<textarea class="form-control" id="content" placeholder="내용을 입력하세요">{{post.content}}</textarea>
					</div>					
				</form>
				<a href="/" role="button" class="btn btn-secondary">취소</a>
				<a href="javascript:void(0)" role="button" class="btn btn-primary" id="btn-update" >수정완료</a>
				<a href="javascript:void(0)" role="button" class="btn btn-danger" id="btn-delete" >삭제</a>
			</div>
	</div>

{{>layout/footer}}


